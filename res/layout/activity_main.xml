<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<GridLayout
    android:id="@+id/mainPage_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity"
    android:columnCount="4"
    android:rowCount="6">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">
        <ImageView
            android:id="@+id/img_agg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dip"

            android:src="@drawable/jagg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_agg"
            android:layout_centerHorizontal="true"

            android:text="聚合"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">
        <ImageView
            android:id="@+id/img_addSite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dip"

            android:src="@drawable/add_site"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_addSite"
            android:layout_centerHorizontal="true"

            android:text="添加网站"/>
    </RelativeLayout>

</GridLayout>

</ScrollView>

<RelativeLayout
    android:id="@+id/main_left"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/main_myStars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="我的收藏"/>

        <View
            android:layout_height="2px"
            android:layout_width="match_parent"
            android:background="#CFCFCF"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/t1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_editSites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_myStars">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="编辑网站"/>

        <View
            android:layout_height="2px"
            android:layout_width="match_parent"
            android:background="#CFCFCF"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/t2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_aggSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_editSites">

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="信息推送设置"/>

        <View
            android:id="@+id/tttt"
            android:layout_height="2px"
            android:layout_width="match_parent"
            android:background="#CFCFCF"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/t3"/>

    </RelativeLayout>

</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
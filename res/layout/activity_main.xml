<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:id="@+id/mainPage_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="4"
    android:rowCount="6">

    <RelativeLayout>
        <ImageView
            android:id="@+id/img_jwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dip"

            android:src="@drawable/jwc"/>
        <TextView
            android:contentDescription="http://jwc.bit.edu.cn/"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_jwc"
            android:layout_centerHorizontal="true"

            android:text="教务处"/>
    </RelativeLayout>

    <RelativeLayout>
        <ImageView
            android:id="@+id/img_zdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dip"

            android:src="@drawable/zdh"/>
        <TextView
            android:contentDescription="http://ac.bit.edu.cn/"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_zdh"
            android:layout_centerHorizontal="true"

            android:text="自动化"/>
    </RelativeLayout>

    <RelativeLayout>
        <ImageView
            android:id="@+id/img_csdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dip"

            android:src="@drawable/csdn"/>
        <TextView
            android:contentDescription="https://www.csdn.net/"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_csdn"
            android:layout_centerHorizontal="true"

            android:text="CSDN"/>
    </RelativeLayout>




</GridLayout>